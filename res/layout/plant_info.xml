<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/plantInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:src="@drawable/flower_parts" android:scaleType="fitEnd" />

    <TableLayout android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow android:id="@+id/tableRow1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="5dip" >

            <TextView android:id="@+id/plant_title"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="@android:style/TextAppearance.Small"
                      android:text="@string/plant_title"/>

            <TextView android:id="@+id/plant_title_value"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="@dimen/attr_padding"
                      android:textAppearance="@android:style/TextAppearance.Medium"/>
        </TableRow>
        <TableRow android:id="@+id/tableRow2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="5dip" >

            <TextView android:id="@+id/plant_family"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="@android:style/TextAppearance.Small"
                      android:text="@string/plant_family"/>

            <TextView android:id="@+id/plant_family_value"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="@dimen/attr_padding"
                      android:textAppearance="@android:style/TextAppearance.Medium"
                      android:textStyle="italic"/>
        </TableRow>
    </TableLayout>
</FrameLayout>