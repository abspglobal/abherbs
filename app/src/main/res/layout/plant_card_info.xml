<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/plantInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CardsForeground"
        android:orientation="vertical"
        android:padding="@dimen/list_padding">

        <TextView
            android:id="@+id/first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"
            android:textColor="@color/CardText"/>

        <TextView
            android:id="@+id/up_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"
            android:textColor="@color/CardText"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/next_to_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/CardText"/>

            <LinearLayout
                android:id="@+id/plant_background_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/plant_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_desc"
                android:paddingBottom="@dimen/list_padding"
                android:paddingTop="@dimen/list_padding"
                android:scaleType="fitStart"/>
            </LinearLayout>

        </RelativeLayout>

        <!--<TextView-->
            <!--android:id="@+id/bellow_image"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="@android:style/TextAppearance.Holo.Small"-->
            <!--android:background="@color/primary_dark_material_dark"-->
            <!--android:textColor="@color/CardText"/>-->

    </LinearLayout>

    <ImageView
        android:id="@+id/plant_translate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/translate_desc"
        android:background="@drawable/translate"
        android:paddingBottom="@dimen/list_padding"
        android:paddingTop="@dimen/list_padding"
        android:onClick="getTranslation"
        android:scaleType="fitStart"/>

    <View
        android:id="@+id/bottomInfo"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/plantInfoLayout"
        android:background="@drawable/list_item_shadow_bottom"/>
</RelativeLayout>
