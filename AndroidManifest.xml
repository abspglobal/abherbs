<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sk.ab.herbs"
          android:versionCode="1"
          android:versionName="0.5alpha">
    <uses-sdk android:minSdkVersion="16"/>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application android:label="@string/app_name"
                 android:icon="@drawable/home"
                 android:theme="@android:style/Theme.Holo.Light"
                 android:debuggable="true">

        <service android:name=".service.RESTService" />

        <activity android:name=".activities.FilterPlantsActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.ListPlantsActivity"
                  android:configChanges="orientation|screenSize"/>
        <activity android:name=".activities.DisplayPlantActivity"
                android:theme="@android:style/Theme.Holo.Light"
                android:configChanges="orientation|screenSize"/>
    </application>
</manifest>
