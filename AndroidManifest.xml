<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sk.ab.herbs"
          android:versionCode="2"
          android:versionName="0.6.0-alpha">
    <uses-sdk android:minSdkVersion="19"
              android:targetSdkVersion="21"/>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application android:label="@string/app_name"
                 android:icon="@drawable/home"
                 android:theme="@style/Theme.Application"
                 android:debuggable="false">

        <service android:name=".service.RESTService" />

        <activity android:name=".activities.FilterPlantsActivity"
                  android:label="@string/app_name"
                  android:theme="@style/HerbsActionBarTheme"
                  android:configChanges="orientation|screenSize|locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.DisplayPlantActivity"
                  android:theme="@style/HerbsActionBarTheme"
                  android:configChanges="orientation|screenSize|locale"/>
        <activity
                android:name="sk.ab.herbs.activities.UserPreferenceActivity"
                android:theme="@style/Theme.Settings"
                android:label="@string/settings">
        </activity>
    </application>
</manifest>
